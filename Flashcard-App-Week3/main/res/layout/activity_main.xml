<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#569E90"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/flashcard_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:height="200dp"
        android:gravity="center"
        android:text="@string/what_is_a_static_variable_in_java"
        android:textAlignment="center"
        android:textColor="#020202"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/flashcard_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:height="200dp"
        android:gravity="center"
        android:text="@string/variable_that_is_common_to_all_instances_in_a_class"
        android:textAlignment="center"
        android:textColor="#020202"
        android:textSize="35sp"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/eye_visible_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="17dp"
        android:contentDescription="@android:string/ok"
        android:src="@drawable/ic_add_circle_outline_black_24dp" />

</RelativeLayout>




